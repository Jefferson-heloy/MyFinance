@model PlanoContaModel

<h2>Criar Palno de Contas</h2>
@{
    ViewData["Title"] = "Criar Conta";

    var vDescricao="";
    var vTipo ="";
    var vId = 0;

try{
    vId = int.Parse(@ViewBag.Registro.Id.ToString());
    vDescricao = @ViewBag.Registro.Descricao.ToString();
    vTipo = @ViewBag.Registro.Tipo.ToString();
}catch{}

}



<form asp-controller="PlanoConta" asp-action="CriarPlanoConta">
    <input type="hidden" asp-for="Id" value="@vId" />
    <div class="form-group">
        <label>Descrição: </label>
        <span asp-validation-for="Descricao" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="Descricao" value="@vDescricao" />
    </div>
    <div class="form-group">
        <label>Tipo: </label>
        @{ 
            if(vTipo =="Receita"){
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="Receita" checked>Receita</label>
                </div>
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="Despesa" unchecked>Despesa</label>
                </div>
                  }
            else{
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="Receita" unchecked>Receita</label>
                </div>
                <div class="radio">
                    <label><input type="radio" asp-for="Tipo" value="Despesa" checked>Despesa</label>
                </div>
            }
        }

    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
</form>