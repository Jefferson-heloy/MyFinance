@model UsuarioModel
@{ 
    Layout = "../Shared/_LayoutLogin.cshtml";
}

<div class="container" style="background-color:rgba(239,239,239,0.95); border-radius:10px; padding:20px;width:500px"
<h2><strong>Registrar minha Conta!</strong></h2>
<br />
 <br />
<form asp-controller="Usuario" asp-action="Registrar" novalidate>
    <div class="form-group">
        <label for="nome">Nome: </label>
        <span asp-validation-for="Nome" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="Nome" />
    </div>
    <div class="form-group">
        <label for="email">Email: </label> <span asp-validation-for="Email" class="text-danger"></span>
        <input type="email" class="form-control" asp-for="Email" />
    </div>
    <div class="form-group">
        <label for="pwd">Senha: </label> <span asp-validation-for="Senha" class="text-danger"></span>
        <input type="password" class="form-control" asp-for="Senha" />
    </div>
    <div class="form-group">
        <label for="data">Data Nascimento: </label> <span asp-validation-for="Data_Nascimento" class="text-danger"></span>
        <input type="date" class="form-control" asp-for="Data_Nascimento" />
    </div>

    <button type="submit" class="btn btn-block btn-success">Registrar</button>
    <button type="button" class="btn btn-block btn-primary" onclick="javascript:window.location.href='../Usuario/Login'">Login</button>

</form>

</div>